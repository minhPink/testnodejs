extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success()
    +alert-error()

    .container.my-3 
        .row 
            .col-12 
                +box-head("Gio hang")


        .row 
            .col-12 
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT
                            th Anh 
                            th Ten
                            th Gia
                            th So luong
                            th Tong tien 
                            th Hang dong 
                    tbody
                        if(cart.products.length > 0) 
                            each item , index in cart.products
                                tr 
                                    td #{index + 1}
                                    td 
                                        img(
                                            src=item.productInfo.thumbnail 
                                            alt=item.productInfo.title
                                            width="80px"
                                        )
                                    td 
                                        a(href=`/products/detail/${item.productInfo.slug}`) #{item.productInfo.title}
                                    td #{item.productInfo.newPrice}$
                                    td 
                                        input(
                                            type="number"
                                            name="quantity"
                                            value=item.quantity
                                            min="1"
                                            product-id=item.product_id
                                            style="width: 60px"
                                        ) 
                                    td #{item.totalPrice}$
                                    td 
                                        a(
                                            href=`/cart/deleted/${item.product_id}`
                                            class="btn btn-danger"
                                        ) Xoa 

                h3(class="text-right") Tổng đơn hàng : #{cart.totalPrice}

                div(class="text-right mt-3")
                    a(href="/checkout" class="btn btn-success") Thanh toan
                       
    script(src="/js/cart.js")             
